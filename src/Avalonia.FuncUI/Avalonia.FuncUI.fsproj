<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Version>0.1.3</Version>
    <Authors>JaggerJo</Authors>
    <Product>JaggerJo.Avalonia.FuncUI</Product>
    <PackageProjectUrl>https://github.com/JaggerJo/Avalonia.FuncUI</PackageProjectUrl>
    <RepositoryUrl>https://github.com/JaggerJo/Avalonia.FuncUI</RepositoryUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>JaggerJo.Avalonia.FuncUI</PackageId>
    <PackageIconUrl>https://github.com/JaggerJo/Avalonia.FuncUI/blob/master/github/img/nuget_icon.png?raw=true</PackageIconUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop" Version="0.9.0-preview6" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="4.6.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
      <Link>LICENSE</Link>
    </None>
    <Compile Include="Assembly.fs" />
    <Compile Include="Library.fs" />
    <Compile Include="Types.fs" />
    <Compile Include="VirtualDom\VirtualDom.Misc.fs" />
    <Compile Include="VirtualDom\VirtualDom.Delta.fs" />
    <Compile Include="VirtualDom\VirtualDom.Differ.fs" />
    <Compile Include="VirtualDom\VirtualDom.Patcher.fs" />
    <Compile Include="VirtualDom\VirtualDom.fs" />
    <Compile Include="Components\Hosts.fs" />
    <Compile Include="Components\Lazy.fs" />
    <Compile Include="Components\DataTemplateView.fs" />
    <Compile Include="Builder.fs" />
  </ItemGroup>

</Project>
